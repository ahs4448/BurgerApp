<h1 class="center">Welcome to Burger Creator!</h1>

<div class="section1 container">
    <div class="text-center row">
        <div class="col-md-6">
            <h1>BURGERS NOT EATEN</h1>
            <ul>
                {{#each burgers}}
                {{#unless devoured}}
                {{> burger devour=true}}
                {{/unless}}
                {{/each}}
            </ul>
        </div>

        <div class="col-md-6">
            <h1>BURGERS EATEN</h1>
            <ul>
                {{#each burgers}}
                {{#if devoured}}
                {{> burger devour=false}}
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
</div>

<h3 class="center">Create your burger here</h3>
<form class="center" action="/" method="POST">
    <input name="burgerName" type="text">
</form>